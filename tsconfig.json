{
    "compilerOptions": {
        "module": "commonjs",
        "allowSyntheticDefaultImports": true,
        "strictNullChecks": false,
        "noImplicitAny": false,
        "noImplicitThis": false,
        "sourceMap": true,
        "target": "es6",
        "outDir": "./target",
        "baseUrl": ".",
        "strict": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "paths": {
        "*": [
            "node_modules/*",
            "src/*"
        ]
    }
  }